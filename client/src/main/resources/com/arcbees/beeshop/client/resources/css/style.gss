/* -- GENERIC STYLE
------------------------ */

.txt_center {
    text-align: center;
}

.visuallyHidden {
    height: 1px;
    width: 1px;
    margin: -1px;
    padding: 0;
    border: 0;

    position: absolute;
    overflow: hidden;

    clip: rect(0 0 0 0);
}

.inputQuantity {
    color: C_TEXT;
    line-height: 1;
    font-family: F_PRIMARY;
    font-size: 1.8rem;
    text-align: center;
    text-decoration: none;

    display: inline-block;
    margin-right: 13px;
    width: 50px;
    padding: 1.05rem;
    min-height: 1em;
    border: 4px solid C_DARK;

    position: relative;
    vertical-align: middle;

    cursor: pointer;
}

input[type=number]::-webkit-inner-spin-button,
input[type=number]::-webkit-outer-spin-button {
    margin: 0;

    -webkit-appearance: none;
}

.share {
    display: inline-block;

    position: relative;
}

.share_icons {
    width: 220px;
    height: 30px;

    position: absolute;
    left: 35px;
    top: 0;

    overflow: hidden;
}

.share_close {
    font-size: 2rem;

    display: block;
    margin-left: 10px;
    width: 25px;

    cursor: pointer;
}

.share_icons_fb,
.share_icons_pinterest,
.share_icons_gplus,
.share_icons_twitter,
.share_icons_tumblr,
.share_icons_mail {
    display: block;
    width: 30px;
    height: 30px;

    position: absolute;
    top: 0;
    left: 0;
}

.share_icons_fb {
    left: 15px;

    @mixin animation_delay(.6s);
}

.share_icons_pinterest {
    left: 50px;

    @mixin animation_delay(.5s);
}

.share_icons_gplus {
    left: 85px;

    @mixin animation_delay(.4s);
}

.share_icons_twitter {
    left: 120px;

    @mixin animation_delay(.3s);
}

.share_icons_tumblr {
    left: 155px;

    @mixin animation_delay(.2s);
}

.share_icons_mail {
    left: 190px;

    @mixin animation_delay(.1s);
}

.share_icons a:before {
    color: C_STRIPE_MEDIUM2;
    font-size: 3rem;

    @mixin transition(all, .5s);
}

.share_icons a:hover:before {
    color: C_TEXT;
}

.slideIn {
    @mixin animation_name(slideIn);
    @mixin animation_duration(.5s);
}

@-webkit-keyframes slideIn {
    0% {
        opacity: 0;
        -webkit-transform: translateX(-900%);
    }

    100% {
        opacity: 1;
        -webkit-transform: translateX(0);
    }
}

@keyframes slideIn {
    0% {
        opacity: 0;
        transform: translateX(-900%);
    }

    100% {
        opacity: 1;
        transform: translateX(0);
    }
}
