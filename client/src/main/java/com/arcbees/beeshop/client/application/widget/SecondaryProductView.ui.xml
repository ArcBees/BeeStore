<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'
        xmlns:arcbees="urn:import:com.arcbees.ui">

    <ui:with field="page" type="com.arcbees.beeshop.client.resources.PageHomeResources"/>
    <ui:with field="res" type="com.arcbees.beeshop.client.resources.AppResources"/>

    <g:HTMLPanel styleName="{page.style.itemForSale}">
        <g:Image ui:field="image" addStyleNames="{page.style.itemForSale_img}"/>

        <arcbees:ReplacePanel ui:field="pricePanel"/>
    </g:HTMLPanel>
</ui:UiBinder>
