<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="page" type="com.arcbees.beeshop.client.resources.PageHomeResources"/>

    <g:HTMLPanel ui:field="panel">
        <div ui:field="priceView" class="{page.style.itemForSale_info}">
            <div class="{page.style.itemForSale_info_name}">
                <span ui:field="brandName"/>
                <span ui:field="productName"/>
            </div>
            <div class="{page.style.itemForSale_info_price}" ui:field="price"/>
        </div>
        <!-- TODO: Larry : style this -->
        <div ui:field="shopView" class="{page.style.itemForSale_info}">
            <div class="{page.style.itemForSale_info_name}">
                <a ui:field="shopAnchor">Shop</a>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
