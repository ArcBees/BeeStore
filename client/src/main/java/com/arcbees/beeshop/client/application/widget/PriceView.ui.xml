<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="page" type="com.arcbees.beeshop.client.resources.PageHomeResources"/>

    <g:HTMLPanel ui:field="panel">
        <a ui:field="priceView" class="{page.style.itemForSale_info}">
            <div class="{page.style.itemForSale_info_name}">
                <span ui:field="brandName"/>
                <span ui:field="productName"/>
            </div>
            <div class="{page.style.itemForSale_info_price}" ui:field="price"/>
        </a>
        <a ui:field="shopView" class="{page.style.itemForSale_info}">
            <span class="{page.style.itemForSale_info_shop}">Shop</span>
        </a>
    </g:HTMLPanel>
</ui:UiBinder>
