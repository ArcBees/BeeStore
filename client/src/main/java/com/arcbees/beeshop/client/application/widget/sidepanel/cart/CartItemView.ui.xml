<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="res" type="com.arcbees.beeshop.client.resources.AppResources"/>
    <ui:with field="page" type="com.arcbees.beeshop.client.resources.PageHomeResources"/>
    <ui:with field="font" type="com.arcbees.beeshop.client.resources.FontResources"/>

    <g:HTMLPanel styleName="{res.style.orderBox}">
        <g:Image resource="{res.beestoreLogo}" addStyleNames="{res.style.orderBox_img}"/>
        <div class="{res.style.orderBox_info}">
            <h4 ui:field="name" class="{res.style.orderBox_productName}"/>
            <span ui:field="itemColor" class="{res.style.orderBox_productColor}"/>
            <span ui:field="logoColor" class="{res.style.orderBox_productColor}"/>
            <span class="{res.style.orderBox_productSize}">Size:
                <span ui:field="size"/>
            </span>
            <div>
                <input ui:field="quantity" type="number" class="{res.style.inputQuantity}"/>
                <span class="{res.style.orderBox_productTimes}">x</span>
                <span class="{res.style.orderBox_productPrice}">
                    <span ui:field="price"/>
                    $
                </span>
            </div>
        </div>
        <i ui:field="delete" class="{res.style.orderBox_delete} {font.icons.iconDeleteCircle}"/>
    </g:HTMLPanel>
</ui:UiBinder>
