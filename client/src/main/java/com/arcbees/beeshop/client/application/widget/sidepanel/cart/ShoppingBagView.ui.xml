<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="res" type="com.arcbees.beeshop.client.resources.AppResources"/>
    <ui:with field="panel" type="com.arcbees.beeshop.client.resources.AppResources"/>
    <ui:with field="comp" type="com.arcbees.beeshop.client.resources.ComponentsResources"/>
    <ui:with field="font" type="com.arcbees.beeshop.client.resources.FontResources"/>

    <g:HTMLPanel>
        <div class="{res.style.rightPanel}">
            <div class="{res.style.rightPanel_shoppingBag}">
                <div class="{res.style.rightPanel_title}">
                    <h2>Shopping bag
                        <span ui:field="numberOfItems"/>
                    </h2>
                </div>

                <g:HTMLPanel ui:field="itemsContainer"/>

                <div class="{res.style.orderAmount} {res.style.clearfix}">
                    <h4>Subtotal</h4>
                    <span class="{res.style.orderAmount_price}">12.50$</span>
                </div>
                <button ui:field="checkoutButton" class="{comp.style.btn} {comp.style.btn_outline}">Proceed to checkout</button>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
