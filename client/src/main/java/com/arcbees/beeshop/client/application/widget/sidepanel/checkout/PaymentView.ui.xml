<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="res" type="com.arcbees.beeshop.client.resources.AppResources"/>
    <ui:with field="comp" type="com.arcbees.beeshop.client.resources.ComponentsResources"/>
    <ui:with field="font" type="com.arcbees.beeshop.client.resources.FontResources"/>

    <g:HTMLPanel styleName="{res.style.rightPanel_paiement}">
        <div class="{res.style.rightPanel_title}">
            <div class="{res.style.rightPanel_step}">
                <span>3</span>
            </div>
            <h2>Payment</h2>
        </div>

        <h3>Payment method</h3>

        <div class="{res.style.paiementMethod}">
            <div class="{comp.style.inputRadio}">
                <input type="radio" name="paeiment method" id="paypal"/>
                <label for="paypal">paypal</label>
            </div>

            <div class="{comp.style.inputRadio}">
                <input type="radio" name="paeiment method" id="credit card"/>
                <label for="credit card">credit card</label>
            </div>
        </div>

        <h3>credit card</h3>

        <fieldset>
            <input class="{comp.style.field}" type="text" placeholder="Name on the card*" required=""/>
            <input class="{comp.style.field}" type="text" placeholder="Company name" required=""/>
        </fieldset>

        <fieldset>
            <input class="{comp.style.field}" type="email" placeholder="Card number*" required=""/>
            <input class="{comp.style.field}" type="tel" placeholder="VAT number*" required=""/>
        </fieldset>

        <fieldset>
            <input class="{comp.style.field}" type="email" placeholder="CVS*" required=""/>
            <input class="{comp.style.field}" type="tel" placeholder="MM/YY*" required=""/>
        </fieldset>

        <p>We don't store any credit information on our server.
            <a href="#">Learn more</a>
        </p>

        <button class="{comp.style.btn} {comp.style.btn_outline} {comp.style.btn__center}">Place order</button>
    </g:HTMLPanel>
</ui:UiBinder>

