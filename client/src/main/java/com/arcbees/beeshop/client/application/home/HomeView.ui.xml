<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'
        xmlns:brandpicker="urn:import:com.arcbees.beeshop.client.application.widget.brandpicker"
        ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
        ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
        ui:generateLocales="default">

    <ui:with field="res" type="com.arcbees.beeshop.client.resources.AppResources"/>
    <ui:with field="comp" type="com.arcbees.beeshop.client.resources.ComponentsResources"/>
    <ui:with field="font" type="com.arcbees.beeshop.client.resources.FontResources"/>
    <ui:with field="page" type="com.arcbees.beeshop.client.resources.PageHomeResources"/>
    <ui:with field="slider" type="com.arcbees.beeshop.client.resources.SliderResources"/>

    <g:HTMLPanel>
        <g:HTMLPanel tag="section" ui:field="mainProducts" styleName="{page.style.mainProducts}"/>

        <section class="{res.style.stripe} {res.style.txt_center} {page.style.shoppingByProduct}">
            <h3>
                <ui:msg description="shopping by brand">shopping by brand</ui:msg>
            </h3>

            <brandpicker:BrandPicker ui:field="brandPicker"/>
        </section>

        <section class="{res.style.stripe} {page.style.welcome}">
            <p>
                <ui:msg description="case study">The Beestore is a case study from Arcbees</ui:msg>
                <span>
                    <ui:msg description="to show our hive products">
                        to show our hive of products and branded gears. Enjoy!
                    </ui:msg>
                </span>
            </p>
        </section>

        <g:HTMLPanel ui:field="secondaryProducts" tag="section" styleName="{page.style.itemsForSale}"/>

    </g:HTMLPanel>
</ui:UiBinder>
