<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'
        xmlns:widget="urn:import:com.arcbees.beeshop.client.application.widget">

    <ui:with field="res" type="com.arcbees.beeshop.client.resources.AppResources"/>
    <ui:with field="comp" type="com.arcbees.beeshop.client.resources.ComponentsResources"/>
    <ui:with field="font" type="com.arcbees.beeshop.client.resources.FontResources"/>
    <ui:with field="page" type="com.arcbees.beeshop.client.resources.PageHomeResources"/>

    <g:HTMLPanel>

        <section class="{page.style.mainProducts}">
            <div class="{page.style.mainProducts_left}">
                <g:Image resource="{page.tshirt}"/>

                <widget:PricePresenter ui:field="shirtPrice"/>
            </div>

            <div class="{page.style.mainProducts_right}">
                <g:Image resource="{page.productBag}"/>

                <widget:PricePresenter ui:field="bagPrice"/>
            </div>
        </section>

        <section class="{res.style.stripe} {res.style.txt_center} {page.style.shoppingByProduct}">
            <h3>shopping by products</h3>
            <ul class="{page.style.devProducts_list}">
                <li>
                    <a ui:field="gaeAnchor" class="{font.icons.iconGae}">
                        GAE
                        <span>STUDIO</span>
                    </a>
                </li>
                <li><a ui:field="jukitoAnchor" class="{font.icons.iconJukito}">JUKITO</a></li>
                <li><a ui:field="gwtpAnchor" class="{font.icons.iconGwtp}">GWTP</a></li>
                <li><a ui:field="arcbeesAnchor" class="{font.icons.iconArcbees}">arcbees</a></li>
                <li><a ui:field="gqueryAnchor" class="{font.icons.iconGquery}">gQuery</a></li>
                <li><a ui:field="gsssAnchor" class="{font.icons.iconGsss}">GSSS</a></li>
                <li>
                    <a ui:field="chosenAnchor" class="{font.icons.iconChosen}">
                        GWT
                        <span>chosen</span>
                    </a>
                </li>
            </ul>
        </section>

        <section class="{res.style.stripe} {page.style.welcome}">
            <h2>Welcome to the Beestore</h2>
            <p>The Beestore is a study case from Arcbees
                <span>to show our hive of products and branded gears. Enjoy!</span>
            </p>
        </section>

        <section class="{page.style.itemsForSale}">
            <div class="{page.style.itemForSale}">
                <g:Image addStyleNames="{page.style.itemForSale_img}" resource="{page.productThermos}"/>

                <widget:PricePresenter ui:field="cupPrice"/>
            </div>
            <div class="{page.style.itemForSale}">
                <g:Image addStyleNames="{page.style.itemForSale_img}" resource="{page.productCase}"/>

                <widget:PricePresenter ui:field="casePrice"/>
            </div>
            <div class="{page.style.itemForSale}">
                <g:Image addStyleNames="{page.style.itemForSale_img}" resource="{page.productUsb}"/>

                <widget:PricePresenter ui:field="keyPrice"/>
            </div>
            <div class="{page.style.itemForSale}">
                <g:Image addStyleNames="{page.style.itemForSale_img}" resource="{page.productCup}"/>

                <widget:PricePresenter ui:field="mugPrice"/>
            </div>
        </section>

    </g:HTMLPanel>
</ui:UiBinder>
