<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>
        <p>Credit card</p>

        <form action="javascript:;" ui:field="form">
            <input placeholder="Name on the card" required="required" ui:field="name"/>
            <input placeholder="Card number" required="required" ui:field="number"/>
            <input placeholder="CVS" required="required" ui:field="cvs"/>
            <input placeholder="MM" required="required" type="number" min="1" step="1" max="12" ui:field="expMonth"/>
            /
            <input placeholder="YYYY" required="required" type="number" min="2015" step="1" max="2100" ui:field="expYear"/>

            <button type="submit" ui:field="submit">Place order</button>
        </form>
        We don't store any credit card information on our server.
        <a href="https://stripe.com/about">Learn more</a>
    </g:HTMLPanel>
</ui:UiBinder>
