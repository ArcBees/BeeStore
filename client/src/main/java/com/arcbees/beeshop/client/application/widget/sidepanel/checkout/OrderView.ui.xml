<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="res" type="com.arcbees.beeshop.client.resources.AppResources"/>
    <ui:with field="comp" type="com.arcbees.beeshop.client.resources.ComponentsResources"/>
    <ui:with field="font" type="com.arcbees.beeshop.client.resources.FontResources"/>

    <g:HTMLPanel styleName="{res.style.rightPanel_order}">
        <div class="{res.style.rightPanel_title}">
            <div class="{res.style.rightPanel_step}">
                <span>2</span>
            </div>
            <h2>Order</h2>
        </div>
        <h3>Your order</h3>
        <div class="{res.style.orderBox} {res.style.orderBox__shirt}">
            <g:Image resource="{res.beestoreLogo}" addStyleNames="{res.style.orderBox_img}"/>
            <div class="{res.style.orderBox_info}">
                <h4 class="{res.style.orderBox_productName}">Bee shirt</h4>
                <span class="{res.style.orderBox_productColor}">Grey shirt</span>
                <span class="{res.style.orderBox_productColor}">Yellow Logo</span>
                <span class="{res.style.orderBox_productSize}">Size:
                    <span>M</span>
                </span>
                <div>
                    <input type="number" class="{res.style.inputQuantity}" value="1"/>
                    <span class="{res.style.orderBox_productTimes}">x</span>
                    <span class="{res.style.orderBox_productPrice}">35.00 $</span>
                </div>
            </div>
            <i class="{res.style.orderBox_delete} {font.icons.iconDeleteCircle}"/>
        </div>
        <div class="{res.style.orderAmount} {res.style.clearfix}">
            <h4>subtotal</h4>
            <span class="{res.style.orderAmount_price}">35.00$</span>
        </div>

        <div class="{res.style.orderBox}">
            <h3>Shipping and handling</h3>

            <div class="{comp.style.inputRadio}">
                <input type="radio" name="shipping" id="standard"/>
                <label for="standard">Standard
                    <span>4-5 Business days</span>
                </label>
                <span class="{res.style.shippingPrice}">10.00$</span>
            </div>

            <div class="{comp.style.inputRadio}">
                <input type="radio" name="shipping" id="international"/>
                <label for="international">International delivery
                    <span>10-12 Business days</span>
                </label>
                <span class="{res.style.shippingPrice}">40.00$</span>
            </div>
        </div>

        <div class="{res.style.orderAmount} {res.style.clearfix}">
            <h4>Tax</h4>
            <span class="{res.style.orderAmount_price}">12.50$</span>
        </div>
        <div class="{res.style.orderAmount} {res.style.clearfix}">
            <h4 class="">Order Total</h4>
            <span class="{res.style.orderAmount_price}">47.50$</span>
        </div>
        <button ui:field="continueButton"
                class="{comp.style.btn} {comp.style.btn_outline} {comp.style.btn__center}">Proceed to checkout
        </button>
    </g:HTMLPanel>
</ui:UiBinder>

