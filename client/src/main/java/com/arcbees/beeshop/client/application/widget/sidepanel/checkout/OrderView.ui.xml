            <div class="{res.style.rightPanel_address}">
                <div class="{res.style.rightPanel_title}">
                    <div class="{res.style.rightPanel_step}">
                        <span>1</span>
                    </div>
                    <h2>Address</h2>
                </div>

                <h3>Shipping address</h3>
                <fieldset>
                    <input class="{comp.style.field} {comp.style.required}" type="text" placeholder="First name*"
                           required=""/>
                    <input class="{comp.style.field}" type="text" placeholder="Last name*" required=""/>
                    <input class="{comp.style.field}" type="text" placeholder="Company*" required=""/>
                </fieldset>

                <fieldset>
                    <input class="{comp.style.field}" type="text" placeholder="Address*" required=""/>
                    <input class="{comp.style.field}" type="text" placeholder="Town city*" required=""/>
                    <input class="{comp.style.field}" type="text" placeholder="States" required=""/>
                    <input class="{comp.style.field}" type="text" placeholder="Country" required=""/>
                </fieldset>

                <fieldset>
                    <input class="{comp.style.field}" type="email" placeholder="Email*" required=""/>
                    <input class="{comp.style.field}" type="tel" placeholder="Phone*" required=""/>
                </fieldset>

                <div class="{comp.style.inputCheckbox}">
                    <input type="checkbox" id="check3"/>
                    <label for="check3">Bill to a different address</label>
                </div>

                <button class="{comp.style.btn} {comp.style.btn_outline} {comp.style.btn__center}">Continue</button>
            </div>
            <div class="{res.style.rightPanel_order}">
                <div class="{res.style.rightPanel_title}">
                    <div class="{res.style.rightPanel_step}">
                        <span>2</span>
                    </div>
                    <h2>Order</h2>
                </div>
                <h3>Your order</h3>
                <div class="{res.style.orderBox} {res.style.orderBox__shirt}">
                    <g:Image resource="{res.beestoreLogo}" addStyleNames="{res.style.orderBox_img}"/>
                    <div class="{res.style.orderBox_info}">
                        <h4 class="{res.style.orderBox_productName}">Bee shirt</h4>
                        <span class="{res.style.orderBox_productColor}">Grey shirt</span>
                        <span class="{res.style.orderBox_productColor}">Yellow Logo</span>
                        <span class="{res.style.orderBox_productSize}">Size:
                            <span>M</span>
                        </span>
                        <div>
                            <input type="number" class="{res.style.inputQuantity}" value="1"/>
                            <span class="{res.style.orderBox_productTimes}">x</span>
                            <span class="{res.style.orderBox_productPrice}">35.00 $</span>
                        </div>
                    </div>
                    <i class="{res.style.orderBox_delete} {font.icons.iconDeleteCircle}"/>
                </div>
                <div class="{res.style.orderAmount} {res.style.clearfix}">
                    <h4>subtotal</h4>
                    <span class="{res.style.orderAmount_price}">35.00$</span>
                </div>

                <div class="{res.style.orderBox}">
                    <h3>Shipping and handling</h3>

                    <div class="{comp.style.inputRadio}">
                        <input type="radio" name="shipping" id="standard"/>
                        <label for="standard">Standard
                            <span>4-5 Business days</span>
                        </label>
                        <span class="{res.style.shippingPrice}">10.00$</span>
                    </div>

                    <div class="{comp.style.inputRadio}">
                        <input type="radio" name="shipping" id="international"/>
                        <label for="international">International delivery
                            <span>10-12 Business days</span>
                        </label>
                        <span class="{res.style.shippingPrice}">40.00$</span>
                    </div>
                </div>

                <div class="{res.style.orderAmount} {res.style.clearfix}">
                    <h4>Tax</h4>
                    <span class="{res.style.orderAmount_price}">12.50$</span>
                </div>
                <div class="{res.style.orderAmount} {res.style.clearfix}">
                    <h4 class="">Order Total</h4>
                    <span class="{res.style.orderAmount_price}">47.50$</span>
                </div>
                <button class="{comp.style.btn} {comp.style.btn_outline} {comp.style.btn__center}">Proceed to checkout
                </button>
            </div>
            <div class="{res.style.rightPanel_paiement}">
                <div class="{res.style.rightPanel_title}">
                    <div class="{res.style.rightPanel_step}">
                        <span>3</span>
                    </div>
                    <h2>Paiement</h2>
                </div>

                <h3>Paiement method</h3>

                <div class="{res.style.paiementMethod}">
                    <div class="{comp.style.inputRadio}">
                        <input type="radio" name="paeiment method" id="paypal"/>
                        <label for="paypal">paypal</label>
                    </div>

                    <div class="{comp.style.inputRadio}">
                        <input type="radio" name="paeiment method" id="credit card"/>
                        <label for="credit card">credit card</label>
                    </div>
                </div>


                <h3>credit card</h3>

                <fieldset>
                    <input class="{comp.style.field}" type="text" placeholder="Name on the card*" required=""/>
                    <input class="{comp.style.field}" type="text" placeholder="Company name" required=""/>
                </fieldset>

                <fieldset>
                    <input class="{comp.style.field}" type="email" placeholder="Card number*" required=""/>
                    <input class="{comp.style.field}" type="tel" placeholder="VAT number*" required=""/>
                </fieldset>

                <fieldset>
                    <input class="{comp.style.field}" type="email" placeholder="CVS*" required=""/>
                    <input class="{comp.style.field}" type="tel" placeholder="MM/YY*" required=""/>
                </fieldset>

                <p>We don't store any credit information on our server.
                    <a href="#">Learn more</a>
                </p>

                <button class="{comp.style.btn} {comp.style.btn_outline} {comp.style.btn__center}">Place order</button>
            </div>
            <div class="{res.style.rightPanel_confirmation}">
                <div class="{res.style.rightPanel_title}">
                    <div class="{res.style.rightPanel_step}">
                        <span>4</span>
                    </div>
                    <h2>Confirmation</h2>

                    <div class="{res.style.thankYou}">
                        <svg:SVGImage resource="{res.thankYou}"/>
                        <p>
                            <span>Thank<br/>You
                            </span>
                            For buying from the beestore
                        </p>
                    </div>

                    <div class="{res.style.confirmNumber}">AHNDKOR</div>
                    <p>is your confirmation
                        <span>number. Every informations</span>
                        will be send by email
                    </p>
                </div>
                <button class="{comp.style.btn} {comp.style.btn_outline} {comp.style.btn__center}">Continue shopping
                </button>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>

