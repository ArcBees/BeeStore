<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'
        xmlns:a='urn:import:com.arcbees.ui'>

    <ui:with field="res" type="com.arcbees.beeshop.client.resources.AppResources"/>
    <ui:with field="comp" type="com.arcbees.beeshop.client.resources.ComponentsResources"/>
    <ui:with field="font" type="com.arcbees.beeshop.client.resources.FontResources"/>
    <ui:with field="page" type="com.arcbees.beeshop.client.resources.PageProductResources"/>

    <g:HTMLPanel addStyleNames="{page.style.product}">

        <div ui:field="productInfoDiv" class="{page.style.product_info}">

            <ul class="{page.style.product_nav} {res.style.clearfix}">
                <li class="{page.style.previous}">
                    <a ui:field="previous">
                        <i class="{font.icons.iconArrowDown}"/>
                        Previous Product
                    </a>
                </li>
                <li class="{page.style.next}">
                    <a ui:field="next">Next Product
                        <i class="{font.icons.iconArrowDown}"/>
                    </a>
                </li>
            </ul>

            <div class="{page.style.product_description}">
                <div class="{page.style.product_description_content}">
                    <h2>
                        <span ui:field="brandName">Bee</span>
                        <span ui:field="productName">bag</span>
                    </h2>

                    <p ui:field="productDescription"/>

                    <span ui:field="priceText" class="{res.style.itemPrice}">20 $</span>

                    <h3>options</h3>

                    <ul class="{page.style.product_option}">
                        <li>
                            <i class="{font.icons.iconGquery}"/>
                            <span class="{res.style.visuallyHidden}">gQuery</span>
                        </li>
                        <li>
                            <i class="{font.icons.iconGsss}"/>
                            <span class="{res.style.visuallyHidden}">Gsss</span>
                        </li>
                        <li>
                            <i class="{font.icons.iconChosen}"/>
                            <span class="{res.style.visuallyHidden}">Chosen</span>
                        </li>
                        <li>
                            <i class="{font.icons.iconArcbees}"/>
                            <span class="{res.style.visuallyHidden}">Arcbees</span>
                        </li>
                        <li>
                            <i class="{font.icons.iconGwtp}"/>
                            <span class="{res.style.visuallyHidden}">Gwtp</span>
                        </li>
                        <li>
                            <i class="{font.icons.iconJukito}"/>
                            <span class="{res.style.visuallyHidden}">Jukito</span>
                        </li>
                        <li>
                            <i class="{font.icons.iconGae}"/>
                            <span class="{res.style.visuallyHidden}">Gae studio</span>
                        </li>
                    </ul>

                    <div ui:field="sizeDiv">
                        <h3>size</h3>

                        <ul class="{page.style.product_size}">
                            <li>
                                <a href="#">S
                                    <span class="{res.style.visuallyHidden}">mall</span>
                                </a>
                            </li>
                            <li class="{page.style.active}">
                                <a href="#">M
                                    <span class="{res.style.visuallyHidden}">edium</span>
                                </a>
                            </li>
                            <li>
                                <a href="#">L
                                    <span class="{res.style.visuallyHidden}">arge</span>
                                </a>
                            </li>
                            <li>
                                <a href="#">XL
                                    <span class="{res.style.visuallyHidden}">arge</span>
                                </a>
                            </li>
                        </ul>
                    </div>

                    <input ui:field="quantity" type="number" class="{res.style.inputQuantity}" value="1"/>
                    <button ui:field="addToCart" class="{comp.style.btn} {comp.style.btn_outline}">Add to cart</button>
                    <i class="{font.icons.iconShare}" ui:field="shareButton"/>
                    <a:ReplacePanel ui:field="sharePanel"/>
                </div>
            </div>
        </div>
        <div ui:field="productImageDiv" class="{page.style.product_img}">
            <g:Image ui:field="productImage"/>
        </div>

    </g:HTMLPanel>
</ui:UiBinder>
