<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="res" type="com.arcbees.beeshop.client.resources.AppResources"/>
    <ui:with field="comp" type="com.arcbees.beeshop.client.resources.ComponentsResources"/>
    <ui:with field="font" type="com.arcbees.beeshop.client.resources.FontResources"/>

    <g:HTMLPanel styleName="{res.style.rightPanel_address}">
        <div class="{res.style.rightPanel_title}">
            <div class="{res.style.rightPanel_step}">
                <span>1</span>
            </div>
            <h2>Address</h2>
        </div>

        <h3>Shipping address</h3>
        <fieldset>
            <input class="{comp.style.field} {comp.style.required}" type="text" placeholder="First name*"
                    required="" ui:field="firstName"/>
            <input class="{comp.style.field}" type="text" placeholder="Last name*" required="" ui:field="lastName"/>
            <input class="{comp.style.field}" type="text" placeholder="Company*" required="" ui:field="company"/>
        </fieldset>

        <fieldset>
            <input class="{comp.style.field}" type="text" placeholder="Address*" required="" ui:field="address"/>
            <input class="{comp.style.field}" type="text" placeholder="Town city*" required="" ui:field="townCity"/>
            <input class="{comp.style.field}" type="text" placeholder="States" required="" ui:field="state"/>
            <input class="{comp.style.field}" type="text" placeholder="Country" required="" ui:field="country"/>
        </fieldset>

        <fieldset>
            <input class="{comp.style.field}" type="email" placeholder="Email*" required="" ui:field="email"/>
            <input class="{comp.style.field}" type="tel" placeholder="Phone*" required="" ui:field="phone"/>
        </fieldset>

        <button ui:field="continueButton"
                class="{comp.style.btn} {comp.style.btn_outline} {comp.style.btn__center}">Continue
        </button>
    </g:HTMLPanel>
</ui:UiBinder>

