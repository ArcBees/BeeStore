<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'
        xmlns:svg="urn:import:org.vectomatic.dom.svg.ui">

    <ui:with field="res" type="com.arcbees.beeshop.client.resources.AppResources"/>
    <ui:with field="panel" type="com.arcbees.beeshop.client.resources.AppResources"/>
    <ui:with field="comp" type="com.arcbees.beeshop.client.resources.ComponentsResources"/>
    <ui:with field="font" type="com.arcbees.beeshop.client.resources.FontResources"/>

    <ui:import field="com.arcbees.beeshop.client.NameTokens.*"/>

    <g:HTMLPanel addStyleNames="{res.style.container}">
        <div class="{res.style.wrap}">
            <header>
                <div class="{res.style.header_bottom} {res.grid.row}">
                    <div class="{res.grid.col} {res.grid.col_4}">
                        <nav class="{res.style.header_menu}">
                            <ul>
                                <li>
                                    <a href="#{HOME}">Home</a>
                                </li>
                                <li>
                                    <a href="#{PRODUCTS}">Products</a>
                                </li>
                                <li>
                                    <a href="#">Contact us</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                    <div class="{res.grid.col} {res.grid.col_4} {res.style.beestore_logo}">
                        <a href="#{HOME}">
                            <svg:SVGImage resource="{res.logoBeestore}"/>
                        </a>
                    </div>
                    <div class="{res.grid.col} {res.grid.col_4}">
                        <nav class="{res.style.header_bottom__right}">
                            <li class="{res.style.wishlist}">
                                <button>
                                    <i class="{font.icons.iconWhishlist}"/>
                                    <span class="{res.style.visuallyHidden}">wishlist</span>
                                </button>
                            </li>
                            <li class="{res.style.cart} {res.style.active}">
                                <button>
                                    <i class="{font.icons.iconCart}"/>
                                    <span class="{res.style.visuallyHidden}">cart</span>
                                </button>
                                <div class="{res.style.cart_notifications}">
                                    2
                                </div>
                            </li>
                            <li class="{res.style.language}">
                                <a ui:field="englishAnchor" class="{res.style.active}" href="#">ENG
                                    <span class="{res.style.visuallyHidden}">LISH</span>
                                </a>
                            </li>
                            <li class="{res.style.language}">
                                <a ui:field="frenchAnchor" href="#">FR
                                    <span class="{res.style.visuallyHidden}">ANÃ‡AIS</span>
                                </a>
                            </li>
                        </nav>
                    </div>
                </div>
            </header>

            <div class="{res.style.rightPanel}">
                <div class="{res.style.rightPanel_shoppingBag}">
                    <div class="{res.style.rightPanel_title}">
                        <h2>Shopping bag <span>2</span></h2>
                    </div>

                    <div class="{res.style.orderBox} {res.style.orderBox__shirt}">
                        <g:Image resource="{res.beestoreLogo}" addStyleNames="{res.style.orderBox_img}"/>
                        <div class="{res.style.orderBox_info}">
                            <h4 class="{res.style.orderBox_productName}">Bee shirt</h4>
                            <span class="{res.style.orderBox_productColor}">Grey shirt</span>
                            <span class="{res.style.orderBox_productColor}">Yellow Logo</span>
                            <span class="{res.style.orderBox_productSize}">Size:
                                <span>M</span>
                            </span>
                            <div>
                                <input type="number" class="{res.style.inputQuantity}" value="1"/>
                                <span class="{res.style.orderBox_productTimes}">x</span>
                                <span class="{res.style.orderBox_productPrice}">35.00 $</span>
                            </div>
                        </div>
                        <i class="{res.style.orderBox_delete} {font.icons.iconDeleteCircle}"/>
                    </div>
                    <div class="{res.style.orderBox}">
                        <g:Image resource="{res.beestoreLogo}" addStyleNames="{res.style.orderBox_img}"/>
                        <div class="{res.style.orderBox_info}">
                            <h4 class="{res.style.orderBox_productName}">Bee Mug</h4>
                            <span class="{res.style.orderBox_productColor}">Black Logo</span>
                            <span class="{res.style.orderBox_productSize}">Size:
                                <span>UNIQUE</span>
                            </span>
                            <div>
                                <input type="number" class="{res.style.inputQuantity}" value="1"/>
                                <span class="{res.style.orderBox_productTimes}">x</span>
                                <span class="{res.style.orderBox_productPrice}">35.00 $</span>
                            </div>
                        </div>
                        <i class="{res.style.orderBox_delete} {font.icons.iconDeleteCircle}"/>
                    </div>
                    <div class="{res.style.orderAmount} {res.style.clearfix}">
                        <h4>Subtotal</h4>
                        <span class="{res.style.orderAmount_price}">12.50$</span>
                    </div>
                    <button class="{comp.style.btn} {comp.style.btn_outline} {comp.style.btn__center}">Proceed to checkout</button>
                </div>
            </div>

            <g:SimplePanel ui:field="main" addStyleNames="{res.style.main}"/>

            <div class="{res.style.push}"></div>
        </div>


        <footer class="{res.grid.row} {res.style.clearfix}">
            <div class="{res.style.backTop}">
                <i ui:field="backTop" class="{font.icons.iconArrowDown}"></i>
            </div>

            <div class="{res.grid.col} {res.grid.col_1_3}">
                <nav role="navigation" class="{res.style.footer_menu}">
                    <ul>
                        <li>
                            <a href="#{HOME}">Home</a>
                        </li>
                        <li>
                            <a href="#{PRODUCTS}">Products</a>
                        </li>
                        <li>
                            <a href="">Contact us</a>
                        </li>
                    </ul>
                </nav>

                <p class="{res.style.footer_caseStudy}">The Beestore is a study case from Arcbees
                    <span>to show our hive of products and branded gears. Enjoy!</span>
                </p>
            </div>

            <div class="{res.style.footer_logoArcbees} {res.grid.col} {res.grid.col_1_3}">
                <i class="{font.icons.iconArcbeesName}"/>
            </div>

            <div class="{res.style.footer_contact} {res.grid.col} {res.grid.col_1_3}">
                <ul class="{res.style.footer_linkArcbees}">
                    <li>Arcbees
                        <i class="{font.icons.iconArrowOutside}"/>
                    </li>
                    <li>Developer's platform
                        <i class="{font.icons.iconArrowOutside}"/>
                    </li>
                </ul>
                <ul class="{res.style.footer_linkSocial}">
                    <li>
                        <a href="https://twitter.com/arcbees" target="_blank">
                            <i class="{font.icons.iconTwitter}"/>
                            <span class="{res.style.visuallyHidden}">Twitter</span>
                        </a>
                    </li>
                    <li>
                        <a href="https://plus.google.com/+Arcbees" target="_blank">
                            <i class="{font.icons.iconGPlus}"/>
                            <span class="{res.style.visuallyHidden}">GPlus</span>
                        </a>
                    </li>
                    <li>
                        <a href="https://www.linkedin.com/company/arcbees" target="_blank">
                            <i class="{font.icons.iconLkd}"/>
                            <span class="{res.style.visuallyHidden}">LinkedIn</span>
                        </a>
                    </li>
                    <li>
                        <a href="http://blog.arcbees.com/" target="_blank">
                            <i class="{font.icons.iconWordpress}"/>
                            <span class="{res.style.visuallyHidden}">Wordpress</span>
                        </a>
                    </li>
                    <li>
                        <a href="https://www.facebook.com/arcbees" target="_blank">
                            <i class="{font.icons.iconFb}"/>
                            <span class="{res.style.visuallyHidden}">Facebook</span>
                        </a>
                    </li>
                    <li>
                        <a href="https://github.com/ArcBees" target="_blank">
                            <i class="{font.icons.iconGitHub}"/>
                            <span class="{res.style.visuallyHidden}">Github</span>
                        </a>
                    </li>
                </ul>
            </div>
        </footer>

    </g:HTMLPanel>
</ui:UiBinder>
